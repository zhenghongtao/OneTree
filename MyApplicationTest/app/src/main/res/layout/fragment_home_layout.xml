<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:background="@color/transparent"
   >


   <LinearLayout
       android:id="@+id/ll_title_layout"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_above="@+id/ll_content_layout"
       android:background="@color/white"
       android:layout_marginBottom="10dp"
       android:orientation="horizontal"
       >
       <TextView
           android:id="@+id/tv_title1"
           android:layout_width="80dp"
           android:layout_height="50dp"
           android:gravity="center"
           android:background="@color/a1_red"
           android:text="马上用车"
           />
       <TextView
           android:id="@+id/tv_title2"
           android:layout_width="80dp"
           android:layout_height="50dp"
           android:gravity="center"
           android:background="@color/a1_red"
           android:layout_marginLeft="10dp"
           android:text="预约用车"
           />
   </LinearLayout>

   <LinearLayout
       android:layout_above="@+id/ll_title_layout"
       android:layout_width="wrap_content"
       android:layout_marginBottom="10dp"
       android:orientation="vertical"
       android:layout_height="wrap_content">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="定位"
           />
      <TextView
          android:layout_marginTop="10dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="路况"
          />
   </LinearLayout>

   <RelativeLayout
       android:id="@+id/ll_content_layout"
       android:layout_width="match_parent"
       android:layout_alignParentBottom="true"
       android:layout_height="140dp">
      <TextView
          android:id="@+id/tv_shijian"
          android:layout_above="@+id/tv_shangche"
          android:layout_width="match_parent"
          android:text="时间"
          android:background="@color/a1_red"
          android:gravity="center"
          android:layout_height="70dp" />
       <TextView
           android:id="@+id/tv_shangche"
           android:layout_width="match_parent"
           android:layout_above="@+id/tv_xiache"
           android:text="上车地址"
           android:background="@color/a4_green"
           android:gravity="center"
           android:layout_height="70dp" />
       <TextView
           android:id="@+id/tv_xiache"
           android:layout_alignParentBottom="true"
           android:layout_width="match_parent"
           android:text="下车地址"
           android:gravity="center"
           android:background="@color/a6_yellow"
           android:layout_height="70dp" />
   </RelativeLayout>

</RelativeLayout>
